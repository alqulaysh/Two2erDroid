<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="#666666">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText android:id="@+id/reg_firstname"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:singleLine="true"
            android:layout_marginBottom="11dp"
            android:background="@drawable/firstname_lastname"
            android:layout_above="@+id/reg_lastname"
            android:layout_alignStart="@+id/reg_lastname"
            android:hint="    First Name"
            android:textSize="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textColorHint="#fff"/>

        <EditText android:id="@+id/reg_email"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:singleLine="true"
            android:background="@drawable/emailregestration"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/reg_lastname"
            android:hint="    Email Address"
            android:textSize="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textColorHint="#fff"
            android:textAlignment="textStart" />

        <EditText android:id="@+id/reg_lastname"
        android:layout_width="300dp"
        android:layout_height="45dp"
            android:singleLine="true"
            android:background="@drawable/firstname_lastname"
            android:layout_marginBottom="13dp"
            android:autoText="@drawable/firstname_lastname"
            android:layout_above="@+id/reg_email"
            android:layout_alignStart="@+id/btnRegister"
            android:hint="    Last Name"
            android:textSize="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textColorHint="#fff"/>

        <EditText android:id="@+id/reg_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:password="true"
            android:singleLine="true"
            android:background="@drawable/passwordregiestration"
            android:layout_below="@+id/reg_email"
            android:layout_alignStart="@+id/reg_email"
            android:layout_marginTop="12dp"
            android:hint="    Create Password"
            android:textSize="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textColorHint="#fff" />

        <Button android:id="@+id/btnRegister"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:text="Sign Up"
            android:background="@drawable/hdbutton"
            android:layout_marginBottom="31dp"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:layout_above="@+id/link_to_login"
            android:layout_centerHorizontal="true" />

        <TextView android:id="@+id/link_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:text="Already have account? Login here."
            android:gravity="center"
            android:textSize="12dip"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textAlignment="textStart"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnRegister" />

    </RelativeLayout>

</LinearLayout>