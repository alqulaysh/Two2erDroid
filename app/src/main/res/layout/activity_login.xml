<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/newbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="513dp">

        <TextView
            android:text="@string/forgot_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_pw_link"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_alignBaseline="@+id/link_to_register"
            android:layout_alignBottom="@+id/link_to_register"
            android:layout_alignEnd="@+id/btnLogin"
            />

        <TextView android:id="@+id/link_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:gravity="center"
            android:layout_marginBottom="139dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnLogin" />

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/login_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <Button android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:onClick="handleLogin"
            android:text="@string/button_login"
            android:textAlignment="center"
            android:background="@drawable/buttonclick"
            android:layout_height="38dp"
            android:layout_above="@+id/forgot_pw_link"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp" />


        <EditText
            android:id="@+id/login_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignStart="@+id/btnLogin"
            android:layout_centerVertical="true"
            android:background="@drawable/passwordbackground"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/password"
            android:paddingLeft="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#fff"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_above="@+id/login_password"
            android:layout_alignStart="@+id/login_password"
            android:layout_marginBottom="11dp"
            android:background="@drawable/emaaaaail"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/prompt_email"
            android:paddingLeft="10dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textColorHint="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:fontFamily="monospace"
            android:text="@string/curr_version"
            android:textSize="10sp" />

    </RelativeLayout>

</LinearLayout>