<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="School:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schoolText"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/lastNameText" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameText"
        android:layout_alignBottom="@+id/nameText"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/nameText"
        android:ems="10"
        android:inputType="textNoSuggestions|textPersonName"
        android:text="John" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="DePaul University"
        android:ems="10"
        android:id="@+id/univField"
        android:layout_alignBaseline="@+id/schoolText"
        android:layout_alignBottom="@+id/schoolText"
        android:layout_alignStart="@+id/lNameField" />

    <EditText
        android:id="@+id/lNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lastNameText"
        android:layout_alignBottom="@+id/lastNameText"
        android:layout_alignStart="@+id/nameField"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Doe" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/UserEmailText"
        android:layout_alignBottom="@+id/UserEmailText"
        android:layout_alignStart="@+id/lNameField"
        android:ems="10"
        android:inputType="textEmailAddress|textEmailSubject|textPersonName"
        android:text="none@gmail.com" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/majorField"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonclick"
        android:text="Update My Profile" />

    <Button
        android:text="Change Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changepwd_btn"
        android:background="@drawable/buttonclick"
        android:layout_below="@+id/update_btn"
        android:layout_alignStart="@+id/update_btn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Math"
        android:ems="10"
        android:id="@+id/majorField"
        android:layout_alignBaseline="@+id/majorText"
        android:layout_alignBottom="@+id/majorText"
        android:layout_alignStart="@+id/univField" />

    <TextView
        android:text="Last name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameText"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/UserEmailText"
        android:layout_alignStart="@+id/nameText" />
    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserEmailText"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/univField"
        android:layout_alignStart="@+id/nameText" />

    <TextView
        android:text="First name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:id="@+id/nameText"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/lNameField"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Major:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/majorText"
        android:layout_below="@+id/univField"
        android:layout_alignStart="@+id/schoolText" />

    <ImageView
        android:id="@+id/userProfileImgV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameField"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/genuser" />

</RelativeLayout>